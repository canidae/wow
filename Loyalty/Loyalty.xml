<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/ ..\FrameXML\UI.xsd">
	<Script file="Loyalty.lua"/>

	<Frame name="LoyaltyStatusFrameTemplate" virtual="true" parent="LoyaltyFrame">
		<Size>
			<AbsDimension x="28" y="28" />
		</Size>
		<Layers>
			<Layer level="BACKGROUND">
				<Texture name="$parentTexture">
					<Size>
						<AbsDimension x="28" y="28" />
					</Size>
					<Anchors>
						<Anchor point="CENTER" />
					</Anchors>
				</Texture>
			</Layer>
			<Layer level="OVERLAY">
				<FontString name="$parentText" inherits="GameFontHighlight">
					<Size>
						<AbsDimension x="28" y="28" />
					</Size>
					<Anchors>
						<Anchor point="CENTER" />
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
		<!--
		<Scripts>
			<OnLoad>
				getglobal(self:GetName() .. "Texture"):SetTexture("Interface\\PaperDoll\\UI-Backpack-EmptySlot");
				getglobal(self:GetName() .. "Text"):SetText("199");
			</OnLoad>
		</Scripts>
		-->
	</Frame>

	<Frame name="LoyaltyFrame" hidden="false" alpha="0.8">
		<!--<Backdrop bgFile="Interface\DialogFrame\UI-DialogBox-Background" />-->
		<Size>  
			<AbsDimension x="196" y="68" />
		</Size>
		<Anchors>
			<Anchor point="BOTTOM" relativeTo="UIParent" relativePoint="BOTTOM">
				<Offset>
					<AbsDimension x="0" y="222" />
				</Offset>
			</Anchor>
		</Anchors>
		<Layers>
			<Layer level="OVERLAY">
				<FontString name="LoyaltyFrameStatus" inherits="GameFontRedSmall">
					<Anchors>
						<Anchor point="BOTTOM" relativePoint="TOP">
							<Offset>
								<AbsDimension x="0" y="4" />
							</Offset>
						</Anchor>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
		<Frames>
			<StatusBar name="LoyaltyPlayerPowerBar" minValue="0" maxValue="100" defaultValue="100">
				<Size>
					<AbsDimension x="196" y="12" />
				</Size>
				<Anchors>
					<Anchor point="TOP" relativePoint="TOP">
						<Offset>
							<AbsDimension x="0" y="1" />
						</Offset>
					</Anchor>
				</Anchors>
				<BarTexture name="$parentTexture" file="Interface\TargetingFrame\UI-StatusBar" />
				<BarColor r="1.0" g="1.0" b="0.0" />
				<Layers>
					<Layer level="OVERLAY">
						<FontString name="$parentText" inherits="GameFontDarkGraySmall" text="">
							<Size>
								<AbsDimension x="150" y="12" />
							</Size>
							<Anchors>
								<Anchor point="CENTER" relativeTo="$parent" relativePoint="CENTER">
									<Offset>
										<AbsDimension x="0" y="1" />
									</Offset>
								</Anchor>
							</Anchors>
							<Color r="1.0" g="1.0" b="1.0" />
						</FontString>
					</Layer>
				</Layers>
			</StatusBar>
			<Frame name="LoyaltyPlayerHealth" inherits="LoyaltyStatusFrameTemplate">
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="LoyaltyPlayerPowerBar" relativePoint="BOTTOMLEFT" />
				</Anchors>
			</Frame>
			<Frame name="LoyaltyStatus1" inherits="LoyaltyStatusFrameTemplate">
				<Anchors>
					<Anchor point="LEFT" relativeTo="LoyaltyPlayerHealth" relativePoint="RIGHT" />
				</Anchors>
			</Frame>
			<Frame name="LoyaltyStatus2" inherits="LoyaltyStatusFrameTemplate">
				<Anchors>
					<Anchor point="LEFT" relativeTo="LoyaltyStatus1" relativePoint="RIGHT" />
				</Anchors>
			</Frame>
			<Frame name="LoyaltyStatus3" inherits="LoyaltyStatusFrameTemplate">
				<Anchors>
					<Anchor point="LEFT" relativeTo="LoyaltyStatus2" relativePoint="RIGHT" />
				</Anchors>
			</Frame>
			<Frame name="LoyaltyStatus4" inherits="LoyaltyStatusFrameTemplate">
				<Anchors>
					<Anchor point="LEFT" relativeTo="LoyaltyStatus3" relativePoint="RIGHT" />
				</Anchors>
			</Frame>
			<Frame name="LoyaltyStatus5" inherits="LoyaltyStatusFrameTemplate">
				<Anchors>
					<Anchor point="LEFT" relativeTo="LoyaltyStatus4" relativePoint="RIGHT" />
				</Anchors>
			</Frame>
			<Frame name="LoyaltyPetHealth" inherits="LoyaltyStatusFrameTemplate">
				<Anchors>
					<Anchor point="LEFT" relativeTo="LoyaltyStatus5" relativePoint="RIGHT" />
				</Anchors>
			</Frame>
			<Frame name="LoyaltyStatus6" inherits="LoyaltyStatusFrameTemplate">
				<Anchors>
					<Anchor point="TOP" relativeTo="LoyaltyStatus1" relativePoint="BOTTOM" />
				</Anchors>
			</Frame>
			<Frame name="LoyaltyStatus7" inherits="LoyaltyStatusFrameTemplate">
				<Anchors>
					<Anchor point="LEFT" relativeTo="LoyaltyStatus6" relativePoint="RIGHT" />
				</Anchors>
			</Frame>
			<Frame name="LoyaltyStatus8" inherits="LoyaltyStatusFrameTemplate">
				<Anchors>
					<Anchor point="LEFT" relativeTo="LoyaltyStatus7" relativePoint="RIGHT" />
				</Anchors>
			</Frame>
			<Frame name="LoyaltyStatus9" inherits="LoyaltyStatusFrameTemplate">
				<Anchors>
					<Anchor point="LEFT" relativeTo="LoyaltyStatus8" relativePoint="RIGHT" />
				</Anchors>
			</Frame>
			<Frame name="LoyaltyStatus10" inherits="LoyaltyStatusFrameTemplate">
				<Anchors>
					<Anchor point="LEFT" relativeTo="LoyaltyStatus9" relativePoint="RIGHT" />
				</Anchors>
			</Frame>
		</Frames>
	</Frame>
</Ui>
